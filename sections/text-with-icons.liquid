{{ 'section-text-with-icons.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }

    /* 新增：当选择 2 列时，明确成两列网格 */
    .text-with-icons .item-list.grid-desktop.columns-desktop--2 {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  /* 可选：移动端若不启用滑块并选择 2 列，保持两列 */
  @media screen and (max-width: 749px) {
    .text-with-icons .item-list.grid-mobile.columns-mobile--2 {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }


{%- endstyle -%}

<div class="text-with-icons color-{{ section.settings.color_scheme }} gradient overflow-hidden section-{{ section.id }}-margin">
  <div class="section__wrapper text-with-icons__wrapper page-width section-{{ section.id }}-padding isolate">
    {%- if section.settings.show_section_header -%}
      {% render 'section-header', heading: section.settings.heading, description: section.settings.description %}
    {%- endif -%}
    {% assign slider_id = 'Slider-' | append: section.id %}
    <slider-component
      class="text-with-icons-slider slider"
      {% if section.settings.enable_mobile_slider %}
        data-slide-mobile
      {% endif %}
      data-slide-smooth
      data-draggable
    >
      <div class="slider-container">
        <ul class="item-list slider-wrapper list-unstyled grid-desktop columns-desktop--{{ section.settings.columns_on_desktop }}{% unless section.settings.enable_mobile_slider %} grid-mobile columns-mobile--{{ section.settings.columns_on_mobile }}{% endunless %} icon-size--{{ section.settings.icon_size }} text-align--{{ section.settings.item_alignment }}">
          {%- for block in section.blocks -%}
            <li
              id="Slide-{{ section.id }}-{{ forloop.index }}"
              class="grid-item slider-slide hover-trigger{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index0 }}"
              {% endif %}
              {{ block.shopify_attributes }}
            >
              <div class="item-wrapper">
                {%- unless block.settings.image == blank and block.settings.icon == 'none' -%}
                  <div class="item-icon media media--square">
                    {%- if block.settings.image != blank -%}
                      {{ block.settings.image | image_url: width: 240 | image_tag: loading: 'lazy' }}
                    {%- else -%}
                      {%- render 'icon-sets', icon: block.settings.icon -%}
                    {%- endif -%}
                  </div>
                {%- endunless -%}
                {%- if block.settings.heading != blank -%}
                  <h3 class="item-heading h5">
                    {{ block.settings.heading | escape }}
                  </h3>
                {%- endif -%}
                {%- if block.settings.description != blank -%}
                  <div class="item-description rte light{% if section.settings.hide_description %} small-hide{% endif %}">
                    {{ block.settings.description }}
                  </div>
                {%- endif -%}
              </div>
            </li>
          {%- endfor -%}
        </ul>
      </div>
      {% render 'slider-controller', slider_id: slider_id, show_dots: true, show_nav_buttons: false %}
    </slider-component>
  </div>
</div>

