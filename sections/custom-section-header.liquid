{%- style -%}
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
  }
{%- endstyle -%}

<div class="custom-section-header section-{{ section.id }}-margin">
  <div class="section__wrapper page-width isolate">
    {% render 'section-header',
            heading: section.settings.heading,
            description: section.settings.description,
            water_text: section.settings.water_text,
            button_label: section.settings.button_label,
            button_link: section.settings.button_link,
            button_style: 'secondary',
            show_bottom_line: section.settings.show_title_bottom_line
    %}
  </div>
</div>
{% schema %}
{
  "name": "t:sections.custom-section-header.name",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer", "custom.drawer", "custom.popup"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.all.text-content.heading.label",
      "default": "Custom section title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.all.text-content.description.label",
      "default": "<p>Custom section description<\/p>"
    },
    {
      "type": "text",
      "id": "water_text",
      "label": "t:sections.custom-section-header.settings.water_text.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.button.header_content"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "t:sections.all.button.button_label.label",
      "info": "t:sections.all.button.button_label.info"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.all.button.button_link.label"
    },
    {
      "type": "checkbox",
      "id": "show_title_bottom_line",
      "label": "t:sections.custom-section-header.settings.show_title_bottom_line.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.margin.header_content"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_top.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.margin.margin_bottom.label",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "t:sections.custom-section-header.presets.name",
      "category": "t:sections.all.category.content-info"
    }
  ]
}
{% endschema %}